{
  "name": "php-lsp",
  "displayName": "PHP Language Server",
  "description": "PHP language support powered by php-lsp (Rust)",
  "version": "0.1.0",
  "publisher": "php-lsp",
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:php",
    "workspaceContains:**/composer.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "PHP Language Server",
      "properties": {
        "phpLsp.enable": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Enable/disable PHP Language Server"
        },
        "phpLsp.phpVersion": {
          "type": "string",
          "default": "8.2",
          "enum": ["7.4", "8.0", "8.1", "8.2", "8.3", "8.4"],
          "scope": "resource",
          "description": "Target PHP version for diagnostics and completion"
        },
        "phpLsp.serverPath": {
          "type": "string",
          "default": "",
          "scope": "machine",
          "description": "Custom path to php-lsp binary (leave empty for bundled)"
        },
        "phpLsp.includePaths": {
          "type": "array",
          "items": { "type": "string" },
          "default": [],
          "scope": "resource",
          "description": "Additional paths to include in indexing"
        },
        "phpLsp.stubs.extensions": {
          "type": "array",
          "items": { "type": "string" },
          "default": [
            "Core", "SPL", "standard", "pcre", "date", "json",
            "mbstring", "ctype", "tokenizer", "dom", "SimpleXML",
            "PDO", "curl", "filter", "hash", "session",
            "Reflection", "intl", "fileinfo", "openssl", "phar",
            "xml", "xmlreader", "xmlwriter", "zip", "zlib",
            "bcmath", "gd", "iconv", "mysqli", "sodium"
          ],
          "scope": "resource",
          "description": "PHP extensions to load stubs for"
        },
        "phpLsp.composer.enabled": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Enable composer.json autoload support"
        },
        "phpLsp.indexVendor": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Index vendor/ directory (lazy loading)"
        },
        "phpLsp.diagnostics.mode": {
          "type": "string",
          "default": "basic-semantic",
          "enum": ["off", "syntax-only", "basic-semantic"],
          "enumDescriptions": [
            "No diagnostics",
            "Only syntax errors from parser",
            "Syntax errors + unknown class/function detection"
          ],
          "scope": "resource",
          "description": "Diagnostics mode"
        },
        "phpLsp.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "scope": "window",
          "description": "Trace LSP communication between client and server"
        },
        "phpLsp.logLevel": {
          "type": "string",
          "enum": ["error", "warn", "info", "debug", "trace"],
          "default": "info",
          "scope": "window",
          "description": "Server log level"
        }
      }
    },
    "commands": [
      {
        "command": "phpLsp.restartServer",
        "title": "Restart Language Server",
        "category": "PHP"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.mjs --production",
    "watch": "node esbuild.mjs --watch",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "^20.0.0",
    "esbuild": "^0.21.0",
    "typescript": "^5.5.0"
  }
}
